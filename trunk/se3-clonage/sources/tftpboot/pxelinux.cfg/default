prompt 1

kbdmap fr.ktl

default 0
timeout 50

label clonage
    kernel vmlu26
    append initrd=udprd root=01:00

label clonageold
    kernel vmlu26.old
    append initrd=udprd.old root=01:00

label emetteur
    kernel vmlu26
    append initrd=udprd root=01:00 persoparams=oui lang=FR kbmap=FR dhcp=yes compr=lzop port=9002 umode=snd

label recepteur
    kernel vmlu26
    append initrd=udprd root=01:00 persoparams=oui lang=FR kbmap=FR dhcp=yes compr=lzop port=9002 umode=rcv

label u1
    kernel vmlu26
    append initrd=udprd root=01:00 persoparams=oui lang=FR kbmap=FR dhcp=yes compr=lzop port=9002 umode=snd

label u2
    kernel vmlu26
    append initrd=udprd root=01:00 persoparams=oui lang=FR kbmap=FR dhcp=yes compr=lzop port=9002 umode=rcv

label u1old
    kernel vmlu26.old
    append initrd=udprd.old root=01:00 persoparams=oui lang=FR kbmap=FR dhcp=yes compr=lzop port=9002 umode=snd

label u2old
    kernel vmlu26.old
    append initrd=udprd.old root=01:00 persoparams=oui lang=FR kbmap=FR dhcp=yes compr=lzop port=9002 umode=rcv

label taz
    kernel bzImage
    append initrd=rootfs.gz rw root=/dev/null lang=fr_FR kmap=fr-latin1 vga=normal

label su1
    kernel bzImage
    append initrd=rootfs.gz rw root=/dev/null lang=fr_FR kmap=fr-latin1 vga=normal screen=text umode=snd work=udpcast2.sh

label su2
    kernel bzImage
    append initrd=rootfs.gz rw root=/dev/null lang=fr_FR kmap=fr-latin1 vga=normal screen=text umode=rcv work=udpcast2.sh

label unattended
    kernel bzImageunattend
    # Add options (z_user=..., z_path=..., etc.) to this line.
    append initrd=initrdunattend

label install
    kernel bzImageunattend
    # Add options (z_user=..., z_path=..., etc.) to this line.
    append initrd=initrdunattend

label memtest
  kernel memtp

label 0
localboot 0x80
label a
localboot 0x00
label q
localboot -1
label disk1
localboot 0x80
label disk2
localboot 0x81
