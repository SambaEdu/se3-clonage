label unattended
    kernel bzImageunattend
    # Add options (z_user=..., z_path=..., etc.) to this line.
    append initrd=initrdunattend

label install
    kernel bzImageunattend
    # Add options (z_user=..., z_path=..., etc.) to this line.
    append initrd=initrdunattend

label memtest
  kernel memtp

label 0
localboot 0x80
label a
localboot 0x00
label q
localboot -1
label disk1
localboot 0x80
label disk2
localboot 0x81
